<div class="jumbotron">
  <div class="container">
    <h3><%= @movie.title %></h3>
    <%= image_tag("#{@movie.movie_poster_url}") %>
    <div class="container movie-info">
      <h3>Synopsis</h3>
      <p><%= @movie.synopsis %></p>
    </div>
    <div class="container movie-info">
      <h3>Cast</h3>
      <% @movie.actors.each do |actor| %>
      <p><%= link_to(actor.name, "/actors/#{actor.id}") %></p>
      <% end %>
    </div>
  </div>
</div>
